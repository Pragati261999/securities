              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com' OR '1'='1\",\n  \"password\": \"anything\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Rate Limiting",
      "item": [
        {
          "name": "4.1 Public Route (Rate Limit Test)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/public",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "public"]
            }
          }
        },
        {
          "name": "4.2 Auth Rate Limit Test",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 429) {",
                  "    pm.test('Rate limited', function () {",
                  "        pm.response.to.have.status(429);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Security Headers",
      "item": [
        {
          "name": "5.1 Check Security Headers",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Security headers present', function () {",
                  "    pm.expect(pm.response.headers.get('X-Content-Type-Options')).to.equal('nosniff');",
                  "    pm.expect(pm.response.headers.get('X-Frame-Options')).to.equal('DENY');",
                  "    pm.expect(pm.response.headers.get('Content-Security-Policy')).to.exist;",
                  "    pm.expect(pm.response.headers.get('Strict-Transport-Security')).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Error Handling",
      "item": [
        {
          "name": "6.1 Invalid Endpoint",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "pm.test('No stack trace in response', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.not.have.property('stack');",
                  "    pm.expect(JSON.stringify(jsonData)).to.not.include('Error:');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/nonexistent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "nonexistent"]
            }
          }
        }
      ]
    },
    {
      "name": "7. File Upload",
      "item": [
        {
          "name": "7.1 Upload Without Auth (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/upload/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "upload", "upload"]
            }
          }
        }
      ]
    }
  ]
